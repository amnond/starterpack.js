extends layout

block content
  .container
    .login-container
      form.form-signin(action="/user" method="PUT")
        h2.form-signin-heading Update Information
        
        input.form-control(type="text" placeholder="First name" required="" autofocus="" autocomplete="off" name="first_name" value="#{user.first_name === null ? '' : user.first_name}")
        input.form-control(type="text" placeholder="Last name" required="" autofocus="" autocomplete="off" name="last_name" value="#{user.last_name === null ? '' : user.last_name}")
        input.form-control(type="text" placeholder="Username" required="" autofocus="" autocomplete="off" name="username" value="#{user.username === null ? '' : user.username}")
        input.form-control(type="text" placeholder="Email address" required="" autofocus="" autocomplete="off" name="email_address" value="#{user.email_address === null ? '' : user.email_address}")
        input.form-control(type="text" placeholder="Gender" required="" autofocus="" autocomplete="off" name="gender" value="#{user.gender === null ? '' : user.gender}")
        input.form-control(type="text" placeholder="Location" required="" autofocus="" autocomplete="off" name="location" value="#{user.location === null ? '' : user.location}")
        input.form-control(type="text" placeholder="Picture Url" required="" autofocus="" autocomplete="off" name="picture" value="#{user.location === null ? '' : user.location}")
        button.btn.btn-lg.btn-primary.btn-block.sign-in(type="submit") Update

      h2 Link Accounts
      a.btn.btn-social.btn-twitter(href="/auth/twitter")
        i.fa.fa-twitter 

      a.btn.btn-social.btn-facebook(href="/auth/facebook")
        i.fa.fa-facebook 

      a.btn.btn-social.btn-google-plus(href="/auth/google")
        i.fa.fa-google-plus  

      a.btn.btn-social.btn-github(href="/auth/github")
        i.fa.fa-github


      form.form-signin(action="/user" method="PUT")
        h2.form-signin-heading Update Password
        
        input.form-control(type="password" placeholder="Old Password" required="" autofocus="" autocomplete="off" name="old_password" value="#{user.password === null ? '' : user.password}")
        input.form-control(type="password" placeholder="New Password" required="" autofocus="" autocomplete="off" name="new_password" )
        input.form-control(type="password" placeholder="Confirm New Password" required="" autofocus="" autocomplete="off" name="confirm_new_password" )
        button.btn.btn-lg.btn-primary.btn-block.sign-in(type="submit") Update 


      form.form-signin(action="/user" method="DELETE")
        button.btn.btn-lg.btn-danger.btn-block.sign-in(type="submit") Delete User