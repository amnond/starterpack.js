extends layout

block content
  .login-container
    form.form-signin(action="/login" method="POST")
      h2.form-signin-heading Please sign in
      input.form-control(type="text" placeholder="Username" required="" autofocus="" name="username")
      input.form-control(type="password" placeholder="Password" required="" name="password")
      button.btn.btn-lg.btn-primary.btn-block.sign-in(type="submit") Sign in

    a.btn.btn-social.btn-twitter(href="/auth/twitter")
      i.fa.fa-twitter 

    a.btn.btn-social.btn-facebook(href="/auth/facebook")
      i.fa.fa-facebook 

    a.btn.btn-social.btn-google-plus(href="/auth/google")
      i.fa.fa-google-plus  

    a.btn.btn-social.btn-github(href="/auth/github")
      i.fa.fa-github
